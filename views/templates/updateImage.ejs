<%- include('../partials/header.ejs') %>
<link rel="stylesheet" href="/styles/setup.css" />
<body>
  <main>
    <h2>Set Profile Image</h2>
    <p>
      You can either set an <a href="#image">Image</a> as your display picture
      or you can select an <a href="#avatar">avatar</a>
    </p>

    <section class="avatar" id="avatar">
      <h3>Choose Avatar</h3>
      <div class="avatarBody">
        <a href="<%=pageUrl%>/avatar?src=profileImage-356213.jpg"
          ><img src="/images/images(21).jpeg" alt="first avatar"
        /></a>
        <a>
          <img
            src="
        \images\BCeUOhAoUa1CSCV7kNOOmH6wQPnhkofkppMK7rsQ0XDTIJqTA.jpg"
            alt="second avatar"
          />
        </a>
        <a>
          <img
            src="/images/axDYTtswngY8PZc1mfG5emFE089hqzhcrbjrNG9fn7feGMRdC.jpg"
            alt="third avatar"
          />
        </a>

        <a>
          <img
            src="/images/GGXwxtixs9p4FFCscfjnCEWmql7vlDmQF2jWwRbX8VU5iE1JA.jpg"
            alt="fourth avatar"
          />
        </a>
        <a>
          <img
            src="/images/Zb2D7GoPx26hLBZUkE2R7hqSL3w2pdTbeYWQCiLE52gOiE1JA.jpg"
            alt="fifth avatar"
          />
        </a>
        <a>
          <img
            src="/images/igYPAuPRod4aCZOiPJCtWZrC3UaEvu8LOQcwnOHNsMz4Ri6E.jpg"
            alt="sixth avatar"
          />
        </a>
        <a>
          <img
            src="/images/jNuKi8h4fGyWY6FN17ZJZFB5pHwN8KhDK4cWf60CIbuugJqTA.jpg"
            alt="seventh avatar"
          />
        </a>
        <a><img src="/images/images(21).jpeg" alt="eigth avatar" /></a>
        <a>
          <img
            src="/images/jNuKi8h4fGyWY6FN17ZJZFB5pHwN8KhDK4cWf60CIbuugJqTA.jpg"
            alt="ninth avatar"
          />
        </a>
      </div>
    </section>

    <form
      action="<%=pageUrl%>/imageAdded"
      method="post"
      enctype="multipart/form-data"
      id="image"
    >
      <label for="pfImage"
        ><h3>Select your profile image from your device</h3></label
      >
      <div class="selectImage">
        <input
          type="file"
          name="profileImage"
          id="pfImage"
          accept=".jpg,.jpeg,.png,.gif"
        />
        <div class="cover"></div>
      </div>
      <input type="submit" value="submit" />
    </form>
  </main>
  <div class="float"></div>
  <div class="float"></div>

  <%- include('../partials/footer.ejs') %>
  <script src="/scripts/"></script>
</body>
