<%- include('../partials/header.ejs') %>
<link rel="stylesheet" href="/styles/setup.css" />
<body class="createPostBody">
  <div class="wrapper"></div>
  <h2>Create Blog Post</h2>
  <form action="<%= pageUrl %>/sendPost">
    <input type="text" name="" id="" placeholder="Your Blog Post Title" />
    <select name="" id="" required>
      <option value="none" disabled selected>Select Blog Post Category</option>
      <option value="science">Science</option>
      <option value="technology">Technology</option>
      <option value="lifestyle">Lifestyle</option>
      <option value="gossip">Gossip</option>
      <option value="entertainment">Entertainment</option>
      <option value="health">Health</option>
      <option value="travel">Travel</option>
      <option value="inspiration">Inspiration</option>
    </select>
    <textarea name="" id="text" placeholder="Your Blog Post Content"></textarea>
    <div class="selectImage">
      <input
        type="file"
        name="profileImage"
        id="pfImage"
        accept=".jpg,.jpeg,.png,.gif"
      />
      <div class="cover"></div>
    </div>
    <input type="submit" value="submit" />
  </form>
  <%- include('../partials/footer.ejs') %>
</body>
